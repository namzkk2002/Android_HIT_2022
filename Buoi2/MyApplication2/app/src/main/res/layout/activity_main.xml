<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:weightSum="100"
    android:orientation="vertical"
    android:background="#EFF4F8"
    >
    <LinearLayout
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="12"
        >
        <Button
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/anh1"
            />
        <TextView
            android:layout_weight="4.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Standard"
            android:textStyle="bold"
            android:textSize="25dp"
            android:gravity="center"
            />
        <Button
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/anh2"
            />
        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/anh3"
            />

    </LinearLayout>
    <EditText
        android:id="@+id/editText2"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="0"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="right|bottom"
        android:layout_marginRight="20dp"
        />

    <EditText
        android:id="@+id/editText"
        android:layout_weight="12"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="0"
        android:textStyle="bold"
        android:textSize="40dp"
        android:gravity="right|bottom"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="20dp"
        />
    <LinearLayout
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="12"
        >
        <Button
            android:background="#00000000"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="MC"
            android:gravity="center"
            />
        <Button
            android:background="#00000000"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="MR"
            android:gravity="center"
            />
        <Button
            android:background="#00000000"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="M+"
            android:textStyle="bold"
            android:gravity="center"
            />
        <Button
            android:background="#00000000"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="M-"
            android:textStyle="bold"
            android:gravity="center"
            />
        <Button
            android:background="#00000000"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="MS"
            android:textStyle="bold"
            android:gravity="center"
            />
        <Button
            android:background="#00000000"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Mv"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="66"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="66"
        android:orientation="vertical"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        >

        <LinearLayout
            android:layout_weight="11"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="12"
            >
            <Button
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="%"
                android:textSize="30dp"
                android:gravity="center"
                android:background="#F7F9FC"
                />
            <Button
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="CE"
                android:textSize="30dp"
                android:gravity="center"
                android:background="#F7F9FC"
                />
            <Button
                android:id="@+id/btnClear"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="C"
                android:textSize="30dp"
                android:gravity="center"
                android:background="#F7F9FC"
                />
            <Button
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:textSize="30dp"
                android:gravity="center"
                android:background="@drawable/anh4"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_weight="11"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="12"
            >
            <Button
                android:id="@+id/ps"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:textSize="30dp"
                android:gravity="center"
                android:background="@drawable/anh5"
                />
            <Button
                android:id="@+id/mu"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:textSize="30dp"
                android:gravity="center"
                android:background="@drawable/anh6"
                />
            <Button
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:textSize="30dp"
                android:gravity="center"
                android:background="@drawable/anh7"
                />
            <Button
                android:id="@+id/btnDivide"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:textSize="30dp"
                android:gravity="center"
                android:text="รท"
                android:background="#F7F9FC"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="11"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="12"
            >
            <Button
                android:id="@+id/btn7"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="7"
                android:textSize="30dp"
                android:gravity="center"
                android:background="#FFFFFF"
                />
            <Button
                android:id="@+id/btn8"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="8"
                android:textSize="30dp"
                android:gravity="center"
                android:background="#FFFFFF"
                />
            <Button
                android:id="@+id/btn9"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="9"
                android:textSize="30dp"
                android:gravity="center"
                android:background="#FFFFFF"
                />
            <Button
                android:id="@+id/btnMultiply"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="x"
                android:gravity="center"
                android:background="#F7F9FC"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="11"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="12"
            >
            <Button
                android:id="@+id/btn4"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="4"
                android:textSize="30dp"
                android:gravity="center"
                android:background="#FFFFFF"
                />
            <Button
                android:id="@+id/btn5"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="5"
                android:textSize="30dp"
                android:gravity="center"
                android:background="#FFFFFF"
                />

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="3"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="6"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="-"
                android:textSize="30dp"
                android:gravity="center"
                android:background="#F7F9FC"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="11"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="12"
            >
            <Button
                android:id="@+id/btn1"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="1"
                android:textSize="30dp"
                android:gravity="center"
                android:background="#FFFFFF"
                />
            <Button
                android:id="@+id/btn2"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="2"
                android:textSize="30dp"
                android:gravity="center"
                android:background="#FFFFFF"
                />
            <Button
                android:id="@+id/btn3"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="3"
                android:textSize="30dp"
                android:gravity="center"
                android:background="#FFFFFF"
                />
            <Button
                android:id="@+id/btnPlus"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="+"
                android:textSize="30dp"
                android:gravity="center"
                android:background="#F7F9FC"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="11"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="12"
            >
            <Button
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:textSize="30dp"
                android:gravity="center"
                android:background="@drawable/anh8"
                />
            <Button
                android:id="@+id/btn0"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="0"
                android:textSize="30dp"
                android:gravity="center"
                android:background="#FFFFFF"
                />
            <Button
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="."
                android:textSize="30dp"
                android:gravity="center"
                android:background="#FFFFFF"
                />
            <Button
                android:id="@+id/btnEquals"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="="
                android:textSize="30dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="#0000FF"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>